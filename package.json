{
  "name": "fmt-web-online-shop",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.8.1",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "npm run --workspace web dev",
    "build": "npm run --workspace web build",
    "start": "npm run --workspace web start",
    "lint": "npm run --workspace web lint",
    "test": "npm run --workspace web test",
    "storybook": "npm run --workspace web storybook",
    "storybook:build": "npm run --workspace web storybook:build",
    "storybook:test": "npm run --workspace web storybook:test",
    "build:tokens": "npm run --workspace @fmt/theme build",
    "gen:catalog": "ts-node --project tsconfig.scripts.json scripts/gen-catalog.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.9.2",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  }
}
