{
  "name": "fmt-web-online-shop",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "test": "pnpm --filter web test",
    "storybook": "pnpm --filter web storybook",
    "storybook:build": "pnpm --filter web storybook:build",
    "storybook:test": "pnpm --filter web storybook:test",
    "build:tokens": "pnpm --filter @fmt/theme build",
    "gen:catalog": "ts-node --project tsconfig.scripts.json scripts/gen-catalog.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.9.2",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  }
}
